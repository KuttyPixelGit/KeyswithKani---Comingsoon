{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/api/send-email",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/send-email.js"
    },
    {
      "src": "^/(.*)",
      "dest": "/dist/$1"
    }
  ]
}